<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Register user</title>
</head>
<body>
	<form action="/UserWeb/dang-ky" method="post">
		<div class="form-group row">
			<label style="color: white; background-color: black;">Username:</label>
			 <input type="text" value="" name="username">
		</div>
		<div class="form-group">
			<label style="font-size: 20px; font-style: italic;">Password:</label>
			 <input type="password" name="pass">
		</div>
		<div class="form-group row">
			<label style="color: white; background-color: black;">Name:</label>
			 <input type="text" value="" name="name">
		</div>
		
		<div class="form-group">
			<label id="gender-label">Gioi tinh:</label> 
			<input type="radio" name="gender" value="F"> Nam 
			<input type="radio" name="gender" value="M"> Nu 
			<input type="radio" name="gender" value="NA"> N/A
		</div>
		<div>
			<label>TP:</label> 
			<select name="address">
				<option>Hanoi</option>
				<option>HCM</option>
				<option>Da Nang</option>
			</select>
		</div>
		<div>
			<label>Ghi chu:</label>
			<textarea name="note" rows="3" cols="20">
			</textarea>
		</div>
		<div>
			<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</form>
</body>
</html>